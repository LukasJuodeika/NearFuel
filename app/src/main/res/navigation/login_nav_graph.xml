<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/login_nav_graph" app:startDestination="@id/loginFragment">

    <fragment android:id="@+id/loginFragment" android:name="com.ktu.nearfuel.views.fragments.LoginFragment"
              android:label="LoginFragment">
        <action android:id="@+id/action_loginFragment_to_signUpFragment" app:destination="@id/signUpFragment"/>
        <action android:id="@+id/action_loginFragment_to_mainActivity" app:destination="@id/mainActivity"/>
    </fragment>
    <fragment android:id="@+id/signUpFragment" android:name="com.ktu.nearfuel.views.fragments.SignUpFragment"
              android:label="SignUpFragment">
        <action
                android:id="@+id/action_signUpFragment_to_loginFragment"
                app:destination="@id/loginFragment"
                app:popUpTo="@id/loginFragment"
                app:popUpToInclusive="true"
        />
    </fragment>
    <activity android:id="@+id/mainActivity" android:name="com.ktu.nearfuel.views.activities.MainActivity"
              android:label="MainActivity"/>
</navigation>